<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AddView">
        <attr name="lineColor" format="color" />
        <attr name="lineThickness" format="dimension"/>
        <attr name="padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GradientColorTextView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
    </declare-styleable>

    <declare-styleable name="HalfCircleWithTextProgress">
        <attr name="hcpTextSize" format="dimension" />
        <attr name="hcpTextColor" format="color" />
        <attr name="hcpStrokeWidth" format="dimension" />
        <attr name="hcpBackColor" format="color" />
        <attr name="hcpFrontColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="petBackground" format="reference" />
        <attr name="petTextSize" format="dimension" />
        <attr name="petTextColor" format="color" />
        <attr name="petStrokeColor" format="color" />
        <attr name="petStrokeWidth" format="dimension" />
        <attr name="petTextCount" format="integer" />
        <attr name="petHideTextCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference" />
        <attr name="leftDrawableWidth" format="dimension" />
        <attr name="leftDrawableHeight" format="dimension" />
        <attr name="rightDrawable" format="reference" />
        <attr name="rightDrawableWidth" format="dimension" />
        <attr name="rightDrawableHeight" format="dimension" />
        <attr name="topDrawable" format="reference" />
        <attr name="topDrawableWidth" format="dimension" />
        <attr name="topDrawableHeight" format="dimension" />
    </declare-styleable>
</resources>