<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ry_load_failed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:ignore="KeyboardInaccessibleWidget, ContentDescription">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/make_sure_your_phone_is_connected_to_the_Internet"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_load_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_hint"
        android:layout_marginBottom="15dp"
        android:text="@string/data_loading_failed"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_load_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_load_failed"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btn_reload"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/reload"
        />

</RelativeLayout>